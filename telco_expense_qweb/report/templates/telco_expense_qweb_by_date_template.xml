<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="telco_expense_qweb_by_date_external_layout" inherit_id="report.external_layout" primary="True">
        <xpath expr="//t[@t-call='report.external_layout_header']" position="attributes">
            <attribute name="t-call">telco_expense_qweb.telco_expense_qweb_by_date_external_layout_header</attribute>
        </xpath>
    </template>

    <template id="telco_expense_qweb_by_date_external_layout_header" inherit_id="report.external_layout_header" primary="True">
        <xpath expr="//div[@name='company_address']" position="replace">
            <div></div>
        </xpath>
    </template>

<template id="telco_expense_qweb_by_date_template">

    <t t-call="report.html_container">
      <t t-set="info" t-value="get_header_info"/>
      <h5 class="text-center">
          From
          <u><b><t t-esc="info['start_date']"/></b></u> To
          <u><b><t t-esc="info['end_date']"/></b></u>
      </h5>
        <t t-call="telco_expense_qweb.telco_expense_qweb_by_date_external_layout">
            <div class="page">
                <!-- include CSS  -->
                <style>
                    /* --- Generic Restyling and Resets --- */
                    body {
                        font-family:freeserif;
                    }
                    table, th, td {
                        font-size: 11px;
                        border: 1px solid #ababab !important;
                        margin-bottom: 0px !important;
                        border-collapse: collapse !important;
                        vertical-align: middle !important;
                    }
                    td {
                        padding: 3px !important;
                    }
                </style>
                <h3 class="text-center">เอกสารชี้แจ้งใบเสร็จค่าใช้จ่าย</h3>
            <div class="row">

              <table class="table table-bordered" style="table-layout:auto">
                  <thead>
                  </thead>
                  <tbody>

                      <t t-foreach="get_data_for_report" t-as="obj">

                          <tr t-if="'project_name' in obj">
                              <td  class="col-xs-4" style="background-color:#bebebe">
                                  <strong><t t-esc="obj['project_name']"/></strong>
                              </td>
                              <td class="col-xs-4" style="background-color:#bebebe">
                                  <strong>Description</strong>
                              </td>
                          </tr>

                          <t t-foreach="obj['data']" t-as="exp">
                              <tr>
                                  <td class="col-xs-2"><t t-esc="exp['exp_date']"/></td>
                                  <td class="col-xs-2"><t t-esc="exp['exp_reference']"/></td>
                                  <td class="col-xs-2"><t t-esc="exp['exp_name']"/></td>
                              </tr>
                          </t>
                      </t>

                  </tbody>
              </table>

            </div><!--/.row -->

        </div><!--/.page -->
        </t>
    </t>
</template>

</odoo>
