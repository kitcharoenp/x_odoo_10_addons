<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="telco_expense_report_expense_sheet"
            inherit_id="hr_expense.report_expense_sheet">

            <xpath expr="//thead" position="replace">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th class="text-center">Ref.</th>
                        <th class="text-center">Proj.</th>
                        <th>Unit Price</th>
                        <th>Taxes</th>
                        <th class="text-center">Qty</th>
                        <th class="text-right">Price</th>
                    </tr>
               </thead>
            </xpath>

            <xpath expr="//tbody" position="replace">
              <tbody>
                <tr t-foreach="o.expense_line_ids" t-as="line">
                  <td><span t-field="line.date"/></td>
                  <td>
                    <span t-field="line.name"/>
                    <span t-field="line.description"/><br/>
                    <span t-field="line.analytic_account_id.name"/>
                  </td>
                  <td style="text-center">
                    <span t-field="line.reference"/>
                  </td>
                  <td style="text-center">
                    <span t-field="line.x_project_id"/>
                  </td>
                  <td>
                    <span t-field="line.unit_amount"/>
                  </td>
                  <td>
                    <t t-foreach="line.tax_ids" t-as="tax">
                      <t t-if="tax.description">
                        <span t-field="tax.description"/>
                      </t>
                      <t t-if="not tax.description">
                        <span t-field="tax.name"/>
                      </t>
                    </t>
                  </td>
                  <td class="text-center">
                    <span t-field="line.quantity"/>
                  </td>
                  <td class="text-right">
                    <span t-field="line.total_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: line.currency_id}"/>
                  </td>
                </tr>
              </tbody>
            </xpath>

        </template>
    </data>
</odoo>
