<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='telco_fault_management_pivot_view' model='ir.ui.view'>
        <field name="name">Telco fault management pivot</field>
        <field name="model">telco.fault.management</field>
        <field name="arch" type="xml">
            <pivot string="Telco Fault Management">
                <field name="state_id" type="row"/>
                <field name="start_datetime" interval="month" type="col"/>
                <field name="duration" type="measure"/>
            </pivot>
        </field>
    </record>
</odoo>
