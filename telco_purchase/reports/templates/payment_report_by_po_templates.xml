<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="payment_report_by_po_layout" inherit_id="report.external_layout" primary="True">
      <xpath expr="//t[@t-call='report.external_layout_header']" position="attributes">
          <attribute name="t-call">telco_purchase.payment_report_by_po_header</attribute>
      </xpath>
      <xpath expr="//t[@t-call='report.external_layout_footer']" position="attributes">
          <attribute name="t-call">telco_purchase.payment_report_by_po_footer</attribute>
      </xpath>
  </template>

  <template id="payment_report_by_po_header" inherit_id="report.external_layout_header" primary="True">
      <xpath expr="//div[@name='company_address']" position="replace">
          <div>
              <style>
                  body {
                      font-family:freeserif;
                  }
              </style>
              <br/>
              <div class="row">
                  <div class="col-xs-7 col-xs-offset-2 text-center" >
                      <span style="font-size:23px;">
                          <b>Payment / Purchase Summary</b>
                      </span>
                  </div>
                  <div class="col-xs-3 text-right" >
                      <span style="font-size:13px;" t-field="o.name"/>
                      <br/>
                      <span style="font-size:8px;"
                        t-field="o.x_invoice_receipt_date"
                        t-options='{"format": "dd-MM-YYYY"}'/>
                  </div>
              </div>
          </div>
      </xpath>
  </template>

  <template id="payment_report_by_po_footer" inherit_id="report.external_layout_footer" primary="True">
      <xpath expr="//div[@class='text-center']" position="before">
          <div class="text-center"
              style=" color: black; font-weight: bold; font-size:11px;">
              <!-- include CSS  -->
              <style>
                      body {
                          font-family:freeserif;
                      }
              </style>
              <div class="row zero_min_height">
                <div class="col-xs-4 pull-right text-right" style="font-size:8px;">
                      printed @ <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                </div>
                      <div class="col-xs-12">
                          <div style="border-bottom: 1px solid black;"></div>
                      </div><!-- /.col-xs-12 -->
                      <br/>
              </div><!-- /.row zero_min_height -->

                  <!-- Signature -->
              <div class="row">
                <!-- prepare employee -->
                  <div class="col-xs-3 text-center" >
                      <ul style="list-style-type: none; font-size:11px;">

                          <li><br/><br/><br/></li>
                          <li>________________</li>
                          <li><span t-esc="datetime.datetime.now().strftime('%d / %m / %Y')"/></li>
                          <li><span t-field="user.employee_ids[0].name"/></li>
                          <li><span t-field="user.employee_ids[0].job_id.name"/></li>
                      </ul>
                  </div>
                  <!-- department manager -->
                  <div class="col-xs-3 text-center" >
                      <ul style="list-style-type: none; font-size:11px;">

                          <li><br/><br/><br/></li>
                          <li>________________</li>
                          <li>______/_____/_____</li>
                          <li><span t-field="o.x_manager_id.name"/></li>
                          <li><span t-field="o.x_manager_id.job_id.name"/></li>
                      </ul>
                  </div>
                  <!-- company accounting director -->
                  <div class="col-xs-3 text-center" >
                      <ul style="list-style-type: none; font-size:11px;">

                          <li><br/><br/><br/></li>
                          <li>________________</li>
                          <li>______/_____/_____</li>
                          <li><span t-field="o.company_id.x_accounting_director_id.name"/></li>
                          <li><span t-field="o.company_id.x_accounting_director_id.job_id.name"/></li>
                      </ul>
                  </div>
                  <!-- company managing director -->
                  <div class="col-xs-3 text-center" >
                      <ul style="list-style-type: none; font-size:11px;">

                          <li><br/><br/><br/></li>
                          <li>________________</li>
                          <li>______/_____/_____</li>
                          <li><span t-field="o.company_id.x_managing_director_id.name"/></li>
                          <li><span t-field="o.company_id.x_managing_director_id.job_id.name"/></li>
                      </ul>
                  </div>
              </div><!-- /.row -->
          </div>
      </xpath>
  </template>

<template id="payment_report_by_po_document">
    <t t-call="telco_purchase.payment_report_by_po_layout">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <div class="page">
          <!-- include CSS  -->
          <style>
              /* --- Generic Restyling and Resets --- */
              body {
                  font-family:freeserif;
              }
              table, th, td {
                  font-size: 12px;
                  border: 1px solid #ababab !important;
                  margin-bottom: 0px !important;
                  border-collapse: collapse !important;
                  vertical-align: middle !important;
              }
              td {
                  padding: 3px !important;
              }
          </style>
            <div class="oe_structure"/>

            <!-- invoice -->
              <table class="table table-bordered" style="table-layout:auto">
                <tr>
                  <th class="col-xs-2"><strong>Project</strong></th>
                  <td colspan="3"><span t-field="o.x_account_analytic_id.name"/></td>
                </tr>
                <tr>
                  <th class="col-xs-2" style="background-color: #DEDEDE;"><strong>PO ref.</strong></th>
                  <td class="col-xs-4"><span t-field="o.x_other_ref"/></td>
                  <th class="col-xs-2" style="background-color: #DEDEDE;"><strong>Order date</strong></th>
                  <td class="col-xs-4"><span t-field="o.date_order" t-options='{"format": "dd-MM-YYYY"}'/></td>
                </tr>
                <tr>
                  <th class="col-xs-2" style="background-color: #DEDEDE;"><strong>Vendor</strong></th>
                  <td class="col-xs-4"><span t-field="o.partner_id.name"/></td>
                  <th class="col-xs-2" style="background-color: #DEDEDE;"><strong>Requestor</strong></th>
                  <td class="col-xs-4"><span t-field="o.x_requestor_id.name"/></td>
                </tr>
                <tr>
                  <th class="col-xs-2"><strong>Route</strong></th>
                  <td colspan="3"><span t-field="o.x_description"/></td>
                </tr>

              </table>


            <h4>Items Information</h4>
            <!-- sort the related invoice by id (number) asc -->
            <t  t-set="invoice_ids_sorted"
                t-value="o.invoice_ids.sorted(key=lambda r: r.id)"
            />
            <t t-if="len(invoice_ids_sorted) > 3">
              <t  t-set="invoices_show"
                  t-value="invoice_ids_sorted[-3:]"/>

              <t  t-set="archived"
                  t-value="invoice_ids_sorted[:len(invoice_ids_sorted)-3]"/>

              <t t-set="lot" t-value="len(invoice_ids_sorted)-3"/>
            </t>
            <t t-else="">
              <t  t-set="invoices_show"
                  t-value="invoice_ids_sorted"/>
              <t t-set="lot" t-value="0"/>
            </t>

            <!-- invoice line -->
            <table class="table table-condensed">
              <!-- table head  -->
                <thead>
                    <tr class="text-center" style="background-color: #a6a6a6;">
                        <th class="text-left"><strong>No.</strong></th>
                        <th class="text-center col-xs-6"><strong>Description</strong></th>
                        <th class="text-center"><strong>Amount</strong></th>

                        <!-- list invoices related to this purchase order  -->
                        <th t-if="len(invoice_ids_sorted) > 3" class="text-center" style="font-size: 9px;">
                          <strong>
                            #1 - <span t-esc="lot"/>
                          </strong>
                        </th>

                        <t t-foreach="invoices_show" t-as="invoice_id">
                          <t t-set="lot" t-value="lot+1"/>
                          <th class="text-center" style="font-size: 9px;">
                            <strong>
                              #<span t-esc="lot"/>
                              <br/>
                            <!--
                              <t t-if="invoice_id.number">
                                <u t-field="invoice_id.number"/><br/>
                              </t>
                            -->
                              <t t-if="invoice_id.date_invoice">
                                b@<span t-field="invoice_id.date_invoice"/><br/>
                              </t>
                              <t t-if="invoice_id.reference">
                                <span t-field="invoice_id.reference"/><br/>
                              </t>
                              <!--
                              <t t-if="invoice_id.date_due">
                                p@<u t-field="invoice_id.date_due"/><br/>
                              </t>
                              -->
                            </strong>
                          </th>
                        </t>

                        <th class="text-center"><strong>Total</strong></th>
                        <th class="text-center" style="font-size: 9px;"><strong>Amount Due</strong></th>
                    </tr>
                </thead>

                <t t-set="no" t-value="0"/>
                <t t-set="amount_untaxed" t-value="0"/>
                <t t-set="total_untaxed" t-value="0"/>
                <t t-set="total_due" t-value="0"/>
                <t t-set="had_negative" t-value="0"/>

                <tbody>
                    <!-- for positive amount line -->
                  <t t-foreach="o.order_line" t-as="line">
                    <t t-if="not line.price_subtotal > 0">
                        <t t-set="had_negative" t-value="had_negative+1"/>
                    </t>
                    <tr t-if="line.price_subtotal > 0" >
                        <t t-set="no" t-value="no+1"/>
                        <td class="text-left">
                            <span t-esc="no"/>.
                        </td>
                        <td class="text-left col-xs-6" style="font-size: 12px;">
                            <span t-field="line.name"/>
                        </td>
                        <td class="text-right" style="background-color: #DEDEDE;">
                          <span
                              t-esc="'{0:,.2f}'.format(float(line.price_subtotal))"
                              t-options='{"widget": "False"}'/>
                          <t t-set="amount_untaxed" t-value="amount_untaxed + line.price_subtotal"/>
                        </td>

                        <!-- list invoices line related to this po line -->
                        <t t-set="total" t-value="0"/>
                        <t t-set="total_archived" t-value="0"/>
                        <!-- archived colomn -->

                          <t t-foreach="archived" t-as="invoice_id_sorted">
                                  <!-- find invoice_line in each invoice_id -->
                                  <t t-foreach="line.invoice_lines" t-as="invoice_line">
                                      <t t-if="invoice_id_sorted.id == invoice_line.invoice_id.id">
                                        <t t-set="total_archived" t-value="total_archived+(invoice_line.quantity * invoice_line.price_unit)"/>
                                        <!-- sum purchase invoice line total -->
                                        <t t-set="total" t-value="total+(invoice_line.quantity * invoice_line.price_unit)"/>
                                      </t>
                                  </t>
                          </t>
                        <td t-if="len(invoice_ids_sorted) > 3" class="text-right">
                          <span
                            t-esc="'{0:,.2f}'.format(float(total_archived))"
                            t-options='{"widget": "False"}'/>
                        </td>

                        <!--loop each invoice and then make column (last 3 column) -->
                        <t t-foreach="invoices_show" t-as="invoice_id_sorted">
                              <td class="text-right">
                                <!-- find invoice_line in each invoice_id -->
                                <t t-foreach="line.invoice_lines" t-as="invoice_line">
                                    <t t-if="invoice_id_sorted.id == invoice_line.invoice_id.id">
                                      <span
                                        t-esc="'{0:,.2f}'.format(float(invoice_line.quantity * invoice_line.price_unit))"
                                        t-options='{"widget": "False"}'/>
                                      <!-- sum purchase invoice line total -->
                                      <t t-set="total" t-value="total+(invoice_line.quantity * invoice_line.price_unit)"/>
                                    </t>
                                </t>
                              </td>
                        </t>

                        <td class="text-right">
                            <span
                              t-esc="'{0:,.2f}'.format(float(total))"
                                t-options='{"widget": "False"}'/>
                        </td>
                        <td class="text-right">
                          <span
                            t-esc="'{0:,.2f}'.format(float(line.price_subtotal-total))"
                              t-options='{"widget": "False"}'/>
                        </td>
                        <t t-set="total_untaxed" t-value="total_untaxed+total"/>
                        <t t-set="total_due" t-value="total_due+(line.price_subtotal-total)"/>
                    </tr>
                  </t>

                  <!-- for  amount line less than zero -->
                <t t-if="had_negative > 0">
                  <t t-set="separator" t-value="1"/>
                  <t t-set="cols" t-value="5+len(invoice_ids_sorted)"/>

                  <t t-foreach="o.order_line" t-as="line">
                    <tr t-if="separator == 1" style="background-color: #a6a6a6;">
                      <td t-if="separator == 1" t-att-colspan="cols">/</td>
                    </tr>
                    <t t-set="separator" t-value="separator+1"/>
                    <tr t-if="not line.price_subtotal > 0" >
                        <t t-set="no" t-value="no+1"/>
                        <td class="text-left">
                            <span t-esc="no"/>.
                        </td>
                        <td class="text-left col-xs-6" style="font-size: 12px;">
                            <span t-field="line.name"/>
                        </td>
                        <td class="text-right" style="background-color: #DEDEDE;">
                          <span
                              t-esc="'{0:,.2f}'.format(float(line.price_subtotal))"
                              t-options='{"widget": "False"}'/>
                          <t t-set="amount_untaxed" t-value="amount_untaxed + line.price_subtotal"/>
                        </td>

                        <!-- list invoices line related to this po line -->
                        <t t-set="total" t-value="0"/>
                        <t t-set="total_archived" t-value="0"/>
                        <!-- archived colomn -->

                          <t t-foreach="archived" t-as="invoice_id_sorted">
                                  <!-- find invoice_line in each invoice_id -->
                                  <t t-foreach="line.invoice_lines" t-as="invoice_line">
                                      <t t-if="invoice_id_sorted.id == invoice_line.invoice_id.id">
                                        <t t-set="total_archived" t-value="total_archived+(invoice_line.quantity * invoice_line.price_unit)"/>
                                        <!-- sum purchase invoice line total -->
                                        <t t-set="total" t-value="total+(invoice_line.quantity * invoice_line.price_unit)"/>
                                      </t>
                                  </t>
                          </t>
                        <td t-if="len(invoice_ids_sorted) > 3" class="text-right">
                          <span
                            t-esc="'{0:,.2f}'.format(float(total_archived))"
                            t-options='{"widget": "False"}'/>
                        </td>

                        <!--loop each invoice and then make column (last 3 column) -->
                        <t t-foreach="invoices_show" t-as="invoice_id_sorted">
                              <td class="text-right">
                                <!-- find invoice_line in each invoice_id -->
                                <t t-foreach="line.invoice_lines" t-as="invoice_line">
                                    <t t-if="invoice_id_sorted.id == invoice_line.invoice_id.id">
                                      <span
                                        t-esc="'{0:,.2f}'.format(float(invoice_line.quantity * invoice_line.price_unit))"
                                        t-options='{"widget": "False"}'/>
                                      <!-- sum purchase invoice line total -->
                                      <t t-set="total" t-value="total+(invoice_line.quantity * invoice_line.price_unit)"/>
                                    </t>
                                </t>
                              </td>
                        </t>

                        <td class="text-right">
                            <span
                              t-esc="'{0:,.2f}'.format(float(total))"
                                t-options='{"widget": "False"}'/>
                        </td>
                        <td class="text-right">
                          <span
                            t-esc="'{0:,.2f}'.format(float(line.price_subtotal-total))"
                              t-options='{"widget": "False"}'/>
                        </td>
                        <t t-set="total_untaxed" t-value="total_untaxed+total"/>
                        <t t-set="total_due" t-value="total_due+(line.price_subtotal-total)"/>
                    </tr>

                  </t>
                </t><!-- end line less than zero -->

                    <!-- invoice line from another purchase order -->
                    <t  t-set="inv_line_from_other_po" t-value="[]"/>

                    <t t-foreach="invoices_show" t-as="invoice_id_sorted">
                      <t t-foreach="invoice_id_sorted.invoice_line_ids" t-as="inv_line">
                        <t t-if="inv_line.purchase_id.id != o.id">
                          <t  t-set="inv_line_from_other_po" t-value="inv_line_from_other_po + [inv_line]"/>
                        </t>
                      </t>
                    </t>

                    <t  t-set="purchase_line_id_from_other" t-value="[]"/>
                    <!-- to fix : invoice line not assign purchase -->
                    <t t-foreach="inv_line_from_other_po" t-as="line_other_po">
                        <t t-if="line_other_po.purchase_line_id not in purchase_line_id_from_other">
                          <t  t-set="purchase_line_id_from_other"
                            t-value="purchase_line_id_from_other + [line_other_po.purchase_line_id]"/>
                        </t>
                    </t>

                    <!-- create table rows -->
                    <t t-set="seq" t-value="no"/>

                    <tr t-foreach="purchase_line_id_from_other" t-as="purchase_line_id">
                      <t t-set="seq" t-value="seq+1"/>
                      <td class="text-left">
                          <span t-esc="seq"/>.
                      </td>
                      <td class="text-left col-xs-6" style="font-size: 12px;">
                          <span t-if="purchase_line_id.name"
                            t-field="purchase_line_id.name"/>
                          <span t-else=""
                            t-field="purchase_line_id.name"/>
                      </td>
                      <td class="text-right" style="background-color: #DEDEDE;">

                        <t t-if="purchase_line_id.price_subtotal">
                          <span
                            t-esc="'{0:,.2f}'.format(float(purchase_line_id.price_subtotal))"
                              t-options='{"widget": "False"}'/>
                          <t t-set="amount_untaxed" t-value="amount_untaxed + purchase_line_id.price_subtotal"/>
                        </t>

                        <t t-else="">
                        <span
                          t-esc="'{0:,.2f}'.format(float(purchase_line_id.price_subtotal))"
                            t-options='{"widget": "False"}'/>
                            <t t-set="amount_untaxed" t-value="amount_untaxed + purchase_line_id.price_subtotal"/>
                        </t>

                      </td>

                      <!-- list invoices line related to this po line -->
                      <t t-set="total" t-value="0"/>


                      <!-- loop each invoice and then make column -->
                      <t t-foreach="invoices_show" t-as="invoice_id_sorted">
                        <td class="text-right">
                        <t t-foreach="inv_line_from_other_po" t-as="line_other_po">
                              <!-- find invoice_line in each invoice_id -->
                          <t t-if="invoice_id_sorted.id == line_other_po.invoice_id.id and line_other_po.purchase_line_id.id == purchase_line_id.id">

                                    <span
                                      t-esc="'{0:,.2f}'.format(float(line_other_po.quantity * line_other_po.price_unit))"
                                      t-options='{"widget": "False"}'/>

                                    <!-- sum purchase invoice line total -->
                            <t t-set="total" t-value="total+(line_other_po.quantity * line_other_po.price_unit)"/>
                          </t> <!-- t-if="invoice_id_sorted.id  -->
                        </t> <!-- t-foreach="inv_line_from_other_po" -->
                        </td>
                      </t> <!-- t-foreach="invoices_show" -->
                      <td class="text-right">
                          <span
                            t-esc="'{0:,.2f}'.format(float(total))"
                              t-options='{"widget": "False"}'/>
                      </td>

                      <td class="text-right">
                        <t t-if="purchase_line_id.price_subtotal">
                          <span
                            t-esc="'{0:,.2f}'.format(float(purchase_line_id.price_subtotal-total))"
                              t-options='{"widget": "False"}'/>
                          <t t-set="total_untaxed" t-value="total_untaxed+total"/>
                          <t t-set="total_due" t-value="total_due+(purchase_line_id.price_subtotal-total)"/>
                        </t>
                        <t t-else="">
                        <span
                          t-esc="'{0:,.2f}'.format(float(purchase_line_id.price_subtotal-total))"
                            t-options='{"widget": "False"}'/>
                          <t t-set="total_untaxed" t-value="total_untaxed+total"/>
                          <t t-set="total_due" t-value="total_due+(purchase_line_id.price_subtotal-total)"/>
                        </t>
                      </td>

                    </tr>

                </tbody>

                <t t-set="account_invoice_taxs" t-value="[]"/>
                <t t-foreach="invoices_show" t-as="invoice_id">
                  <t t-foreach="invoice_id.tax_line_ids" t-as="tax_line_id">
                    <t t-set="account_invoice_taxs" t-value="account_invoice_taxs + [tax_line_id]"/>
                  </t>
                </t>

                <t t-set="account_taxs" t-value="[]"/>
                <t t-foreach="account_invoice_taxs" t-as="account_invoice_tax">
                    <t t-if="account_invoice_tax.tax_id not in account_taxs">
                      <t t-set="account_taxs" t-value="account_taxs + [account_invoice_tax.tax_id]"/>
                  </t>
                </t>

                <!-- table foot  -->
                <tfoot>

                    <tr style="background-color: #a6a6a6;">
                        <th colspan="2"><strong>Sum (Untaxed)</strong></th>
                        <th class="text-right">
                          <strong><u>
                            <span
                              t-esc="'{0:,.2f}'.format(float(amount_untaxed))"
                              t-options='{"widget": "False"}'/>
                          </u></strong>
                        </th>

                        <t t-set="archived_amount_untaxed" t-value="0" />
                        <!-- calculate sum archived amount_untaxed-->
                        <t t-foreach="archived" t-as="invoice_id">
                          <t t-set="archived_amount_untaxed"
                            t-value="archived_amount_untaxed+invoice_id.amount_untaxed" />
                        </t>

                        <th t-if="len(invoice_ids_sorted) > 3" class="text-right">
                          <span
                            t-esc="'{0:,.2f}'.format(float(archived_amount_untaxed))"
                            t-options='{"widget": "False"}'/>
                        </th>

                        <!-- list invoices related to this purchase order  -->
                        <t t-foreach="invoices_show" t-as="invoice_id">
                          <th class="text-right">
                            <strong>
                              <span
                                t-esc="'{0:,.2f}'.format(float(invoice_id.amount_untaxed))"
                                  t-options='{"widget": "False"}'/>
                            </strong>
                          </th>
                        </t>

                        <th class="text-right">
                          <strong>
                            <u><span
                              t-esc="'{0:,.2f}'.format(float(total_untaxed))"
                                t-options='{"widget": "False"}'/></u>
                          </strong>
                        </th>
                        <th class="text-right">
                          <strong>
                            <u><span
                              t-esc="'{0:,.2f}'.format(float(total_due))"
                                t-options='{"widget": "False"}'/></u>
                          </strong>
                        </th>
                    </tr>

                    <!-- tax line -->
                    <tr t-foreach="account_taxs" t-as="tax">
                        <td></td>
                        <td class="text-left">
                            <span t-field="tax.name"/>
                        </td>
                        <td class="text-left"><strong></strong></td>
                        <!-- -->
                        <t t-set="total" t-value="0"/>
                        <!-- -->

                        <t t-set="archived_invoice_tax_line" t-value="0" />
                        <!-- calculate archived tax line -->
                        <t t-foreach="archived" t-as="invoice_id_sorted">
                                <t t-foreach="invoice_id_sorted.tax_line_ids" t-as="invoice_tax_line">
                                    <t t-if="invoice_tax_line.tax_id.id == tax.id">
                                      <t t-set="archived_invoice_tax_line"
                                        t-value="archived_invoice_tax_line + invoice_tax_line.amount" />
                                      <t t-set="total" t-value="total+invoice_tax_line.amount"/>
                                    </t>
                                </t>
                        </t>

                        <td t-if="len(invoice_ids_sorted) > 3" class="text-right">
                          <span
                            t-esc="'{0:,.2f}'.format(float(archived_invoice_tax_line))"
                            t-options='{"widget": "False"}'/>
                        </td>

                        <t t-foreach="invoices_show" t-as="invoice_id_sorted">
                              <td class="text-right">
                                <!--  -->
                                <t t-foreach="invoice_id_sorted.tax_line_ids" t-as="invoice_tax_line">
                                    <t t-if="invoice_tax_line.tax_id.id == tax.id">
                                      <span
                                        t-esc="'{0:,.2f}'.format(float(invoice_tax_line.amount))"
                                        t-options='{"widget": "False"}'/>
                                      <!--  -->
                                      <t t-set="total" t-value="total+invoice_tax_line.amount"/>
                                    </t>
                                </t>
                              </td>
                        </t>

                        <td class="text-right">
                            <span
                              t-esc="'{0:,.2f}'.format(float(total))"
                              />
                        </td>
                        <td class="text-right"></td>
                    </tr>

                    <!--
                    total / tax
                    <tr style="font-size:8px; background-color: #e8e8e8;">
                        <th colspan="2"><strong></strong></th>
                        <th class="text-right"><strong></strong></th>

                        <t t-foreach="invoices_show" t-as="invoice_id">
                          <th class="text-right">
                            <strong>
                              <span
                                t-esc="'{0:,.2f}'.format(float(invoice_id.amount_tax))"
                                  t-options='{"widget": "False"}'/>

                            </strong>
                          </th>
                        </t>

                        <th class="text-right"><strong></strong></th>
                        <th class="text-right"><strong></strong></th>
                    </tr>
                    -->

                    <!-- payment -->
                    <tr style="background-color: #98fb98;">
                        <th colspan="2"><strong>Payment</strong></th>
                        <th class="text-right"><strong></strong></th>

                        <t t-set="archived_amount_total" t-value="0" />
                        <!-- calculate archived amount total-->
                        <t t-foreach="archived" t-as="invoice_id">
                            <t t-set="archived_amount_total"
                              t-value="archived_amount_total + invoice_id.amount_total" />
                        </t>

                        <td t-if="len(invoice_ids_sorted) > 3" class="text-right" style="font-size:11px;">
                          <p>
                            <u>
                              <strong>
                                <span style="font-size:13px; background-color: #98fb98;"
                                      t-esc="'{0:,.2f}'.format(float(archived_amount_total))"
                                      t-options='{"widget": "False"}'/>
                            </strong>
                            </u>
                          </p>
                        </td>
                        <!-- payment row -->
                        <t t-foreach="invoices_show" t-as="invoice_id">
                          <td class="text-right" style="font-size:11px;">
                                <p>
                                  <!-- payment due date -->
                                  <t t-if='invoice_id.date_due'>
                                    <strong>Paid on</strong>
                                    <br/>
                                    <strong>
                                      <span t-field="invoice_id.date_due"
                                        t-options='{"format": "dd-MM-YYYY"}'/>
                                    </strong>
                                    <br/>
                                  </t>

                                  <u>
                                    <strong>
                                      <span style="font-size:13px; background-color: #98fb98;"
                                            t-esc="'{0:,.2f}'.format(float(invoice_id.amount_total))"
                                            t-options='{"widget": "False"}'/>
                                  </strong>
                                  </u>
                                <!-- payment method -->
                                  <t t-if="invoice_id.x_account_payment_method">
                                    <br/>
                                    (<span t-field="invoice_id.x_account_payment_method"/>)
                                  </t>
                                </p>
                          </td>
                        </t>

                        <th class="text-right"><strong></strong></th>
                        <th class="text-right"><strong></strong></th>
                    </tr>

                    <!-- account payment (invoice confirm payment)
                    <tr style="background-color: #98fb98;">
                        <th colspan="2"><strong>Payment</strong></th>
                        <th class="text-right"><strong></strong></th>

                        <t t-foreach="invoices_show" t-as="invoice_id">
                          <td class="text-right" style="font-size:8px;">
                              <span t-foreach="invoice_id.payment_ids" t-as="payment_id">
                                <p>
                                  Paid on
                                  <span t-field="payment_id.payment_date" t-options='{"format": "dd-MM-YYYY"}'/>
                                  <u><strong>
                                  <span style="font-size:13px; background-color: #98fb98;"
                                    t-esc="'%.2f'% payment_id.amount"
                                     t-options='{"widget": "False"}'/>
                                  </strong></u>
                                </p>
                              </span>
                          </td>
                        </t>

                        <th class="text-right"><strong></strong></th>
                        <th class="text-right"><strong></strong></th>
                    </tr>
                    -->

                    <!-- residual
                    <tr style="background-color: #e8e8e8;">
                        <th colspan="2"><strong>Amount Due</strong></th>
                        <th class="text-right"><strong></strong></th>

                        <t t-foreach="invoices_show" t-as="invoice_id">
                          <th class="text-right">
                              <strong t-if="invoice_id.residual">
                                <span style="font-size:8px;" t-esc="'%.2f'% invoice_id.residual"
                                  t-options='{"widget": "False"}'/>
                              </strong>
                          </th>
                        </t>

                        <th class="text-right"><strong></strong></th>
                        <th class="text-right"><strong></strong></th>
                    </tr>
                    -->
                </tfoot>
            </table>

            <!-- show bank account name / number if payment method is TRF -->
            <t t-if="len(invoices_show) > 0" >
              <t  t-set="latest_invoice" t-value="invoices_show[-1]"/>
              <p t-if="latest_invoice.x_account_payment_method.code == 'TRF'" style="font-size:13px;">
                <br/>
                <span t-field="latest_invoice.x_account_payment_method"/>

                <t t-if="latest_invoice.partner_bank_id.bank_id">
                  Bank : <b><u><span t-field="latest_invoice.partner_bank_id.bank_id"/></u></b>
                </t>
                <t t-if="latest_invoice.partner_bank_id.acc_number">
                  Account Number : <b><u><span t-field="latest_invoice.partner_bank_id.acc_number"/></u></b>
                </t>
                <t t-if="latest_invoice.partner_bank_id.partner_id">
                  Account Holder : <b><u><span t-field="latest_invoice.partner_bank_id.partner_id.name"/></u></b>
                </t>

              </p>
            </t>
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="payment_report_by_po_templates">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t  t-call="telco_purchase.payment_report_by_po_document"
                t-lang="o.partner_id.lang"
            />
        </t>
    </t>
</template>

</odoo>
