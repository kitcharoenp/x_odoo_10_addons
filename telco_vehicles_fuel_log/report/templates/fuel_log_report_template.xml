<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="vehicles_fuel_log_report_external_layout" inherit_id="report.external_layout" primary="True">
        <xpath expr="//t[@t-call='report.external_layout_header']" position="attributes">
            <attribute name="t-call">telco_vehicles_fuel_log.vehicles_fuel_log_report_header</attribute>
        </xpath>
        <xpath expr="//t[@t-call='report.external_layout_footer']" position="attributes">
            <attribute name="t-call">telco_vehicles_fuel_log.vehicles_fuel_log_report_footer</attribute>
        </xpath>
    </template>

    <template id="vehicles_fuel_log_report_header" inherit_id="report.external_layout_header" primary="True">
        <xpath expr="//div[@name='company_address']" position="replace">
          <div class="row">
              <style>
                  body {
                      font-family:freeserif;
                  }
              </style>

              <div class="col-xs-12 text-center" >
                  <span style="font-size:21px;">
                          <u><b>Vehicles Fuel Log Report</b></u>
                  </span>
              </div>
          </div> <!--./row -->
        </xpath>
    </template>

    <template id="vehicles_fuel_log_report_footer" inherit_id="report.external_layout_footer" primary="True">
        <xpath expr="//div[@class='text-center']" position="before">
            <div class="text-center"
                style=" color: black; font-weight: bold; font-size:11px;">
                <!-- include CSS  -->
                <style>
                        body {
                            font-family:freeserif;
                        }
                </style>
                <div class="row zero_min_height">
                  <div class="col-xs-4 pull-right text-right" style="font-size:8px;">
                        printed @ <span t-esc="datetime.datetime.now().strftime('%d-%m-%Y')"/>
                  </div>
                        <div class="col-xs-12">
                            <div style="border-bottom: 1px solid black;"></div>
                        </div><!-- /.col-xs-12 -->
                        <br/>
                </div><!-- /.row zero_min_height -->

                    <!-- Signature -->
                <div class="row">
                  <!-- prepare employee -->
                    <div class="col-xs-4 text-center" >
                        <ul style="list-style-type: none; font-size:10px;">
                            <li><br/>Prepare</li>
                            <li><br/><br/></li>
                            <li>________________</li>
                            <li><span t-esc="datetime.datetime.now().strftime('%d / %m / %Y')"/></li>
                        </ul>
                    </div>

                    <!-- requestor -->
                    <div class="col-xs-4 text-center" >
                        <ul style="list-style-type: none; font-size:10px;">
                            <li><br/>Verify</li>
                            <li><br/><br/></li>
                            <li>________________</li>
                            <li>______/_____/_____</li>
                        </ul>
                    </div>

                    <div class="col-xs-4 text-center" >
                      <!-- accountant receipt -->
                        <ul style="list-style-type: none; font-size:10px;">
                            <li><span class="text-right"><br/>&#9634; 08:00 - 12:00 AM</span></li>
                            <li><span class="text-right">&#9634; 01:00 - 05:00 PM</span></li>
                            <li><br/></li>
                            <li>________________</li>
                            <li>______/_____/_____</li>
                            <li>(Accounting Department)</li>
                        </ul>
                    </div>

                </div><!-- /.row -->
            </div>
        </xpath>
    </template>

<template id="fuel_log_report_template">

    <t t-call="report.html_container">
        <t t-call="telco_vehicles_fuel_log.vehicles_fuel_log_report_external_layout">
            <div class="page">
                <!-- include CSS  -->
                <style>
                    /* --- Generic Restyling and Resets --- */
                    body {
                        font-family:freeserif;
                    }
                    table, th, td {
                        font-size: 9px;
                        border: 1px solid #ababab !important;
                        margin-bottom: 0px !important;
                        border-collapse: collapse !important;
                        vertical-align: middle !important;
                    }
                    td {
                        padding: 3px !important;
                    }
                </style>

            <div class="row">
                <h5  class='text-center'>
                  Vehicle Fuel Log Report
                </h5>
              <table class="table table-bordered" style="table-layout:auto">
                  <thead>
                    <tr class='text-center' style="background-color: #A6A6A6;">
                      <th class="text-left"><strong>No.</strong></th>
                      <th class="text-center" style="font-size:8px;">Vehicle</th>
                      <th class='text-center'>Count</th>
                      <th class='text-center'>Mean</th>
                      <th class='text-center'>Std</th>
                      <th class='text-center'>Min</th>
                      <th class='text-center'>25%</th>
                      <th class='text-center'>50%</th>
                      <th class='text-center'>75%</th>
                      <th class='text-center'>Max</th>
                      <th class='text-center'>amount</th>
                    </tr>
                  </thead>
                  <!-- initial variable -->
                  <t t-set="i" t-value="1" />
                  <t t-set="total" t-value="0" />
                  <tbody>
                    <t t-foreach="_get_data" t-as="obj">
                        <tr style="font-size:8px;">
                          <td class="text-left"><t t-esc="i"/></td>
                          <td style="font-size:8px;"><t t-esc="obj['license_plate']"/></td>
                          <td class='text-center'><t t-esc="obj['count']"/></td>
                          <td class='text-center'><t t-esc="obj['mean']"/></td>
                          <td class='text-center'><t t-esc="obj['std']"/></td>
                          <td class='text-center'><t t-esc="obj['min']"/></td>
                          <td class='text-center'><t t-esc="obj['25%']"/></td>
                          <td class='text-center'><t t-esc="obj['50%']"/></td>
                          <td class='text-center'><t t-esc="obj['75%']"/></td>
                          <td class='text-center'><t t-esc="obj['max']"/></td>
                          <td class='text-center'><t t-esc="obj['amount']"/></td>
                        </tr>
                        <t t-set="i" t-value="i+1" />
                    </t>
                  </tbody>
              </table>

            </div><!--/.row -->


        </div><!--/.page -->
        </t>
    </t>
</template>


</odoo>
