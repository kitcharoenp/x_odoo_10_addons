<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="x_withholding_tax_document_form_view" model="ir.ui.view">
        <field name="name">Withholding tax document form</field>
        <field name="model">withholding.tax.document</field>
        <field name="arch" type="xml">
            <form string="Withholding Tax Document">
               <sheet string="Withholding tax document">
                    <label for="name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="product_id"
                                options="{'no_create': True, 'no_open': True}"/>
                            <field
                                name="unit_amount"
                                required="1"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"/>
                            <label for="quantity"/>
                            <div>
                                <field name="quantity" class="oe_inline"/>
                                <field name="product_uom_id"
                                    widget="selection"
                                    class="oe_inline"
                                    groups="product.group_uom"/>
                            </div>
                            <field name="tax_ids"
                                domain="[('type_tax_use', '=', 'purchase')]"
                                widget="many2many_tags"
                                options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="origin"/>
                            <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="date"/>
                            <field name="employee_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="total_amount"
                                widget='monetary'
                                options="{'currency_field': 'currency_id'}"
                            />
                            <field name="total_amount_text"/>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    </data>
</odoo>
