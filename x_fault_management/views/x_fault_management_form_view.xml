<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="x_fault_management_form_view" model="ir.ui.view">
        <field name="name">Fault Management Form</field>
        <field name="model">x.fault.management</field>
        <field name="arch" type="xml">
            <form string="Fault Management">
               <sheet string="Fault Management">
                    <label for="name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name='cause_of_fault' placeholder="Internal Note ......."/>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
