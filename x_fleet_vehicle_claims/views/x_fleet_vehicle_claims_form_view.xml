<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="x_fleet_vehicle_claims_form_view" model="ir.ui.view">
        <field name="name">Fleet vehicle claims form</field>
        <field name="model">fleet.vehicle.claims</field>
        <field name="arch" type="xml">
            <form string="Withholding Tax Document">
               <sheet string="Vehicle Claims">
                    <label for="name"/>

                    <group>
                        <group>

                          <field name='date'/>
                          <field name='vehicle_id' />
                          <field name='driver_id'/>
                          <field name='claimed' />

                        </group>
                        <group>
                          <field name='third_party_id'  string="คู่กรณี" context="{'show_address': 1}"
                            options='{"always_reload": True, "highlight_first_line": True}'/>
                          <field name='third_party_plate' string="เลขทะเบียนคู่กรณี"/>

                          <field name='at_fault_driver' string="กรณีความผิด" />

        





                        </group>
                        <field name='description' string="รายละเอียด" placeholder="Internal Note ......."   />

                    </group>

                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
