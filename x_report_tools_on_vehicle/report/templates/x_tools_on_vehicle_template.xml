<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="x_report_external_layout" inherit_id="report.external_layout" primary="True">
        <xpath expr="//t[@t-call='report.external_layout_header']" position="attributes">
            <attribute name="t-call">x_report_tools_on_vehicle.x_report_external_layout_header</attribute>
        </xpath>
    </template>

    <template id="x_report_external_layout_header" inherit_id="report.external_layout_header" primary="True">
        <xpath expr="//div[@name='company_address']" position="replace">
            <div>
                <h3 class="text-center">Tools and Equipment Inventory List</h3>
                <div class="col-xs-4">
                    <b>Vehicle : </b>
                    <span t-esc="o.model_id.name" />
                </div>
                <div class="col-xs-3">
                    <b>License Plate : </b><span t-esc="o.license_plate" />
                </div>
                <div class="col-xs-5">
                    <b>Location : </b><span t-esc="o.location" />
                </div>
            </div>
        </xpath>
    </template>

<template id="x_tools_on_vehicle_template">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
        <t t-call="report.external_layout">
            <div class="page">
                <!-- include CSS  -->
                <style>
                    /* --- Generic Restyling and Resets --- */
                    body {
                        font-family:freeserif;
                    }
                    table, th, td {
                        font-size: 11px;
                        border: 1px solid #ababab !important;
                        margin-bottom: 0px !important;
                        border-collapse: collapse !important;
                        vertical-align: middle !important;
                    }
                    td {
                        padding: 3px !important;
                    }
                    .vehicle {
                        font-size: 11px;
                    }
                </style>

                <div class="row">
                    <table class="table table-bordered" style="table-layout:auto">
                        <thead>
                            <tr style="background-color:#bebebe" >
                                <th>No.</th>
                                <th>Category</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Model</th>
                                <th>Serial</th>
                                <th>Asset Number</th>
                                <th>Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="equipments" t-value="get_data_for_report(o.id)"/>
                            <t t-set="count" t-value="1"/>
                            <t t-foreach="equipments" t-as="equipment">
                                <tr>
                                    <td><span t-esc="count" /></td>
                                    <td><span t-esc="equipment['category']" /></td>
                                    <td>
                                        <img t-att-src="'data:image/png;base64,%s' % equipment['image_small']"
                                            style="max-height:1cm; max-width:4cm;"/>
                                        </td>
                                        <td><span t-esc="equipment['name']" /></td>
                                        <td><span t-esc="equipment['model']" /></td>
                                        <td><span t-esc="equipment['serial_no']" /></td>
                                        <td><span t-esc="equipment['x_asset_number']" /></td>
                                        <td><span t-esc="equipment['note']" /></td>
                                    </tr>
                            <t t-set="count" t-value="count+1"/>
                        </t>
                        </tbody>
                    </table>
                </div>
            </div><!--/.page -->
        </t><!--/.docs -->
        </t>
    </t>
</template>



</odoo>
