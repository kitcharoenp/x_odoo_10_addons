<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="x_timesheet_summary_department_form_view" model="ir.ui.view">
            <field name="name">Timesheet summary by department</field>
            <field name="model">x_timesheet.summary.department</field>
            <field name="arch" type="xml">
            <form string="Timesheet by Department">
                <group>
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="depts"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-default"/>
                </footer>
            </form>
            </field>
        </record>
</odoo>
